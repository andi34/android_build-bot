SAUCE=~/android2/official

P3100REPOSITORIES=(
    'p3100/cm-11.0'
    'p3100/cm-12.1'
    'p3100/cm-13.0'
)

P3110REPOSITORIES=(
    'p3110/cm-11.0'
    'p3110/cm-12.1'
    'p3110/cm-13.0'
)

P5100REPOSITORIES=(
    'p5100/cm-11.0'
    'p5100/cm-12.1'
    'p5100/cm-13.0'
)

P5110REPOSITORIES=(
    'p5110/cm-11.0'
    'p5110/cm-12.1'
    'p5110/cm-13.0'
)

P5110REPOSITORIES=(
    'p5110/cm-11.0'
    'p5110/cm-12.1'
    'p5110/cm-13.0'
