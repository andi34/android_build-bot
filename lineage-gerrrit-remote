ESPRESSOWIFIREPOSITORIES=(
    'espressowifi/cm-11.0'
    'espressowifi/cm-12.1'
    'espressowifi/cm-13.0'
)

ESPRESSO3GREPOSITORIES=(
    'espresso3g/cm-11.0'
    'espresso3g/cm-12.1'
    'espresso3g/cm-13.0'
)

ESPRESSOCOMMONREPOSITORIES=(
    'espresso-common/cm-11.0'
    'espresso-common/cm-12.1'
    'espresso-common/cm-13.0'
)

KERNELREPOSITORIES=(
    'kernel/espresso/cm-11.0'
    'kernel/espresso/cm-12.1'
    'kernel/espresso/cm-13.0'
)

for devicerepository in "${P3100REPOSITORIES[@]}"; do
    cd "${SAUCE}/${devicerepository}"
    echo "${devicerepository}"
    if git config remote.gerrit.url > /dev/null; then
        echo "gerrit remote exist already"
    else
        echo "adding gerrit remote"
        git remote add gerrit ssh://Android-Andi@review.lineageos.org:29418/LineageOS/android_device_samsung_p3100
    fi
    cd "${SAUCE}"
done

